<div class="container" width=100% height=100%>
  <div class="row">
    <div class="span9">
      <iframe width=100% height="400" src="//www.youtube.com/embed/<%= @youtube_id %>" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="span3 sidepanel">
      <h1><%= @artist %><BR><small><%= @title %></small></h1>
      <BR><BR><BR><BR>
      <p>
        <%= button_to "Give me more from #{@artist}", artist_path(:artist => @artist), :data => { :artist => @artist }, :class => "btn btn-large btn-primary btn-block", :method => :get %>
        <%= button_to "Give me a different artist", artist_path, :class => "btn btn-large btn-primary btn-block", :method => :get %>
      </p>
    </div>
  </div>
</div>
